@model List<Category>

<a class="btn btn-dark" asp-controller="Category" asp-action="Add">Add Category</a>

    <table class="table table-striped table-hover">
        <thead>
        <td>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>İşlemler</th>
            </tr>
        </td>
    </thead>
    <tbody>
    @foreach(var item in Model)
     {  <tr>
         <td>@item.Id</td>
         <td>@item.Name</td>
         <td><a asp-action="Edit" class="btn btn-dark" asp-controller="Category" asp-route-id="@item.Id">Edit</a> 
          <a asp-action="Delete" class= "btn btn-danger"asp-controller="Category"  asp-route-id="@item.Id">Delete</a>
         </td>
        </tr>
     }
    </table>
    </tbody>

